<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <!-- Database connection settings -->
        <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
        <property name="hibernate.connection.url">jdbc:mysql://database:3306/${{DB_NAME}}?useSSL=false&amp;serverTimezone=UTC</property>
        <property name="hibernate.connection.username">${DB_USER}</property>
        <property name="hibernate.connection.password">${DB_PASS}</property>

        <!-- Dialect -->
        <property name="hibernate.dialect">org.hibernate.dialect.MySQL5Dialect</property>

        <!-- Let Hibernate pick correct dialect automatically -->
        <!-- <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property> -->

        <!-- Hibernate options -->
        <property name="hibernate.show_sql">true</property>
        <property name="hibernate.format_sql">true</property>
        <property name="hibernate.highlight_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <!-- use "update" instead of "create" so data wonâ€™t be wiped every restart -->

        <!-- Entities -->
        <mapping class="com.example.streaum.entity.User"/>
        <mapping class="com.example.streaum.entity.Server"/>
        <mapping class="com.example.streaum.entity.UserHasServers"/>
        <mapping class="com.example.streaum.entity.Channel"/>
        <mapping class="com.example.streaum.entity.TextChannelHistory"/>
        <mapping class="com.example.streaum.entity.ServerInvitation"/>
    </session-factory>
</hibernate-configuration>
